generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  password  String
  image     String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      UserRole @default(User)
}

enum UserRole {
  User
  Admin
}

model Node {
  id          Int      @id @default(autoincrement())
  name        String
  size        String?
  contentType String?
  content     String?
  path        String?
  parent      String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id        Int      @id @default(autoincrement())
  title     String
  time      String
  job       String
  stacks    String
  describe  String
  highlight String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
