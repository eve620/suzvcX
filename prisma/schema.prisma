generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  account          String    @unique
  password         String // 实际使用时，你将在应用程序层对密码进行哈希处理
  nickname         String?
  bio              String?
  avatarUrl        String?
  registrationDate DateTime  @default(now())
  lastLogin        DateTime?
  status           UserState @default(Active)
  role             UserRole  @default(User)
}

enum UserState {
  Active
  Banned
}

enum UserRole {
  User
  Admin
}
