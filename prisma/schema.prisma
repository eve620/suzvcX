model Progress {
  id        Int      @id @default(autoincrement())
  course    String
  wordIndex Int
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DevLog {
  id        Int      @id @default(autoincrement())
  time      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
